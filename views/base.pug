doctype html
html(lang='en')
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width,initial-scale=1')
      link(href='https://fonts.googleapis.com/css?family=Lato:300,300i,700' rel='stylesheet')
      link(rel='stylesheet' href='/css/style.css')
      link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
      title=  `Natours | ${title}`
  body
    header.header
      nav.nav.nav--tours
        a.nav__el(href='/') All tours
        form.nav__search
          button.nav__search-btn
            svg
              use(href='/img/icons.svg#icon-search')
          input.nav__search-input(type='text' placeholder='Search tours')
      .header__logo
        img(src='/img/logo-white.png' alt='Natours logo')
      nav.nav.nav--user
        if (user)
          a.nav__el(href='#') My bookings
          a.nav__el(href='/api/users/me')
            img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
            span= user.name.split(' ')[0]
          a.nav__el.nav__el--logout(href='#') Log out

        else
          a.nav__el(href='/auth/login') Log In
          button.nav__el.nav__el--cta Sign up

    block content

    .footer
      .footer__logo
        img(src='/img/logo-green.png' alt='Natours logo')
      ul.footer__nav
        li
          a(href='#') About us
        li
          a(href='#') Download apps
        li
          a(href='#') Become a guide
        li
          a(href='#') Careers
        li
          a(href='#') Contact
